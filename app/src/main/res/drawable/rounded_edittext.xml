<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color for the EditText -->
    <solid android:color="#FFFFFF" />

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Optional border/stroke for the EditText -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Optional padding inside the EditText -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
